generator client {
  provider   = "prisma-client"
  output     = "../src/generated/"
  engineType = "client"
}

datasource db {
  provider = "postgresql"
}

enum DepartmentType {
  General
  Health
}

enum BookingStatus {
  Upcoming
  Attended
  Missed
}

enum statusTypes {
  Available
  Locked
  Booked
}

model Admin {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
}

model User {
  id       Int       @id @default(autoincrement())
  name     String
  email    String    @unique
  password String
  dob      DateTime?
  image    String?
  location String?

  createdAt DateTime @default(now())
  booked    Booked[]
}

model Company {
  id       Int     @id @default(autoincrement())
  name     String
  key      String  @unique
  password String
  logo     String?

  departments Department[]

  createdAt DateTime @default(now())
}

model Department {
  id        Int            @id @default(autoincrement())
  companyId Int
  name      String
  type      DepartmentType @default(General)

  company   Company     @relation(fields: [companyId], references: [id])
  schedules Schedules[]

  createdAt DateTime @default(now())

  @@index([companyId])
}

model Schedules {
  id           Int         @id @default(autoincrement())
  departmentId Int
  date         DateTime    @db.Date
  startTime    DateTime    @db.Time
  endTime      DateTime    @db.Time
  status       statusTypes @default(Available)

  department Department @relation(fields: [departmentId], references: [id])
  booked     Booked[]

  @@index([departmentId])
}

model Booked {
  id          Int           @id @default(autoincrement())
  userId      Int
  schedulesId Int           @unique
  qrCode      String
  status      BookingStatus @default(Upcoming)

  user      User      @relation(fields: [userId], references: [id])
  schedules Schedules @relation(fields: [schedulesId], references: [id])

  createdAt DateTime @default(now())

  @@index([userId])
  @@index([schedulesId])
}
